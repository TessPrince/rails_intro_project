<h1 class="title is-2">All Pokemon</h1>
<%= form_with(url: search_pokemon_index_path, method: :get, local: true) do %>
  <div class="field is-grouped mb-5">
    <div class="control is-expanded">
      <%= text_field_tag(:keywords, nil, class: "input", placeholder: 'Search for pokemon') %>
    </div>
    <div class="select">
      <%= select_tag "type", options_from_collection_for_select(Type.all, :id, :name), include_blank: true%>
    </div>
    <div class="control">
      <%= submit_tag("Search", class: "button is primary")%>
    </div>
  </div>
<% end %>
<ul>
  <% @pokemons.each do |p| %>
    <li><%= link_to p.name, pokemon_path(p) %></li>
  <% end %>
</ul>
