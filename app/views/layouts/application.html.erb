<!DOCTYPE html>
<html>
  <head>
    <title>RailsIntroProject</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma-rtl.min.css">
  </head>

  <body>
    <section class="section">
      <div class="container">
        <p class="subtitle is-4"><%= link_to 'Home', root_path %> | <%= link_to 'About', about_path%></p>
        <%= form_with(url: search_pokemon_index_path, method: :get, local: true) do %>
          <div class="field is-grouped mb-5">
            <div class="control is-expanded">
              <%= text_field_tag(:keywords, nil, class: "input", placeholder: 'Search for pokemon') %>
            </div>
            <div class="control">
              <%= submit_tag("Search", class: "button is primary")%>
            </div>
          </div>
        <% end %>
        <%= yield %>
      </div>
    </section>
  </body>
</html>
